{
    "editor.tabSize": 2,
    "editor.rulers": [
      100
    ],
    "editor.showFoldingControls": "always",
    "editor.folding": true,
    "editor.foldingStrategy": "indentation",
    "editor.fontFamily": "DejaVu Sans Mono for Powerline, Menlo, Monaco, 'Courier New', monospace",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true,
    },
}